<html>

<head>
  <title>Appointment Scheduler</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-700 text-neutral-50 text-center">
  <div class="flex justify-center">
    <%- include ('header') %>
  </div>
  <div class="flex flex-col justify-center items-center p-4">
    <div class="flex flex-col justify-center md:w-2/5 w-full">
      <p class="font-semi-bold text-xl pt-4 text-center">Welcome to Appointment Scheduler</p>
      <div class="flex justify-center">
        <div class="flex flex-col justify-center items-center">
          <div class="flex flex-col justify-center items-center pt-8 w-full">
            <b>Existing User?</b>
            <a class="bg-inherit border-2 border-black flex justify-center hover:bg-red-500  p-1 rounded-lg w-full text-inherit"
              href="/signin">Sign-In</a>
          </div>
          <div class="flex flex-col justify-center pt-8 items-center w-full">
            <b>New User?</b>
            <a class="bg-inherit border-2 w-full flex justify-center border-black hover:bg-red-500 p-1 rounded-lg"
              href="/signup">Sign-Up</a>
          </div>
        </div>
  
      </div>
     
    </div>
    <div class="p-3"><%- include ('footer') %></div>
  </div>
</body>

</html>